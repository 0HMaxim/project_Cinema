<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DotNet_FinalProj.Styles">


    <Style TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="20" Background="Beige"  BorderBrush="Black" BorderThickness="0 2 3 0">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Button.FontWeight" Value="Bold"></Setter>
    </Style>
    


    <Style TargetType="TextBlock">
        <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
        <Setter Property="TextBlock.Foreground" Value="Black"></Setter>
    </Style>

    <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                        <Border
                            BorderBrush="Black"
                            Background="Red"
                            BorderThickness="3"
                            CornerRadius="20"
                            Padding="3 0 3 0">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        <Setter Property="TextBox.Foreground" Value="White"></Setter>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border
                            BorderBrush="Black"
                            Background="Red"
                            BorderThickness="3"
                            CornerRadius="20"
                            Padding="5">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="TextBox.Foreground" Value="White"></Setter>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="Grid.Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFC19537" Offset="0"></GradientStop>
                    <GradientStop Color="#FFC9C949" Offset="0.477"></GradientStop>
                    <GradientStop Color="#FFAC407B"  Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="ListBox.Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFC19537" Offset="0"></GradientStop>
                    <GradientStop Color="#FFC9C949" Offset="0.477"></GradientStop>
                    <GradientStop Color="#FFAC407B"  Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="ListBox.Foreground" Value="DarkBlue"/>
    </Style>

    <Style TargetType="ListBoxItem">
        <Setter Property="ListBoxItem.Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFC19537" Offset="0"></GradientStop>
                    <GradientStop Color="#FFC9C949" Offset="0.477"></GradientStop>
                    <GradientStop Color="#FFAC407B"  Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="ListBoxItem.Foreground" Value="#e3e3e3"></Setter>
        <Setter Property="ListBoxItem.BorderBrush" Value="#a1a1a1"></Setter>
    </Style>
    
</ResourceDictionary>